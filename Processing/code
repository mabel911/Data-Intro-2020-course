void setup() {
  size(300, 400);
  background(300, 80, 100);
}

void draw() {
  if (mousePressed) {
    background(200, 0, 50);
  } 

  stroke(55, 255, 255);
  fill(10, 0, 400);
  ellipse(mouseY,200, 100, 100);

  fill(0, 210, 230);
  rect(mouseX,245, 10, 240);

  fill(0, 0, 255);
  ellipse(mouseY,200, 100, 100);
